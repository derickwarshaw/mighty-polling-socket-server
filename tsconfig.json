{
  "compileOnSave": false,
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "lib": [
          "dom",
          "dom.iterable",
          "es2015",
          "es2016"
      ],
      "target": "es2016",
      "module": "es2015",
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "outDir": "dist",
      "removeComments": false,
      "preserveConstEnums": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "typeRoots": [
        "client/types"
      ]
  },
  "resolve": {
    "extensions": [ ".ts", ".tsx", ".js", ".json"]
  },
  "files": [
    "client/index.ts"
  ]
}